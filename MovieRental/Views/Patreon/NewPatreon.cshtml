@model MovieRental.Models.Patreons.PatreonRegistrationModel

@section Styles {
    <link href="~/css/PatreonCreateAccount.css" rel="stylesheet" />
}

<h2>New Patreon</h2>
<form method="post" asp-controller="Patreon" asp-action="CreateAccount">
    <div class="jumbotron">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="LoginName" class="control-label"></label>
                    <input asp-for="LoginName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ComformationPassword" class="control-label"></label>
                    <input asp-for="ComformationPassword" class="form-control" />
                </div>
                <div><input type="submit" value="Create Account" class="btn btn-success" id="createAccountButton"></div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                </div>
            </div>
       
        </div>
    </div>
</form>
